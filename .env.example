# WhisperTrade Environment Variables
# Copy this file to .env.local and fill in your values

# ==========================================
# Required: NextAuth.js Configuration
# ==========================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-super-secret-key-min-32-chars-long

# ==========================================
# Database Configuration (PostgreSQL)
# ==========================================
# Option 1: Local PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/whispertrade

# Option 2: Neon (Serverless Postgres)
# DATABASE_URL=postgresql://user:password@ep-xxxxx.us-east-1.aws.neon.tech/whispertrade?sslmode=require

# Option 3: Supabase
# DATABASE_URL=postgresql://postgres:password@db.xxxxx.supabase.co:5432/postgres

# ==========================================
# Redis Configuration (Upstash)
# ==========================================
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-rest-token

# ==========================================
# AI Services
# ==========================================
# OpenAI (for GPT-4o summarization)
OPENAI_API_KEY=sk-your-openai-api-key

# Anthropic Claude (alternative to OpenAI)
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# ==========================================
# Social Media APIs
# ==========================================

# YouTube Data API v3
# Get from: https://console.cloud.google.com/apis/credentials
YOUTUBE_API_KEY=your-youtube-data-api-key

# Twitter/X API v2
# Get from: https://developer.twitter.com/en/portal/dashboard
TWITTER_BEARER_TOKEN=your-twitter-bearer-token

# Reddit API
# Get from: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your-reddit-app-id
REDDIT_CLIENT_SECRET=your-reddit-app-secret
REDDIT_USER_AGENT=WhisperTrade/1.0 by your-username

# ==========================================
# Financial Data APIs
# ==========================================

# Alpha Vantage (for stock prices)
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key

# Finnhub (alternative for stock prices)
FINNHUB_API_KEY=your-finnhub-key

# ==========================================
# Optional: Analytics & Monitoring
# ==========================================

# PostHog (product analytics)
# NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
# NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Sentry (error tracking)
# SENTRY_DSN=your-sentry-dsn

# ==========================================
# Optional: Payment Processing
# ==========================================

# Stripe
# STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-key
# STRIPE_SECRET_KEY=sk_test_your-stripe-secret
# STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ==========================================
# Optional: Email Service
# ==========================================

# Resend (for transactional emails)
# RESEND_API_KEY=re_your-resend-key

# SendGrid (alternative)
# SENDGRID_API_KEY=SG.your-sendgrid-key
